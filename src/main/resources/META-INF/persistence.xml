<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
  version="3.0">
  <persistence-unit name="default">

    <jta-data-source>jdbc/myPostgresDS</jta-data-source>
    <class>com.ffhs.referencease.entities.Employee</class>
    <class>com.ffhs.referencease.entities.UserAccount</class>
    <class>com.ffhs.referencease.entities.ReferenceLetter</class>
    <class>com.ffhs.referencease.entities.PerformanceRating</class>
    <class>com.ffhs.referencease.entities.RatingTemplate</class>
    <class>com.ffhs.referencease.entities.AuditLog</class>

    <properties>
<!--      <property name="hibernate.hbm2ddl.auto" value="update"/>-->
      <property name="jakarta.persistence.schema-generation.database.action" value="drop-and-create"/>
<!--      <property name="jakarta.persistence.schema-generation.database.action" value="drop"/>-->
    </properties>

  </persistence-unit>
</persistence>
